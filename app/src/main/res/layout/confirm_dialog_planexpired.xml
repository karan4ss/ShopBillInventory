<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvPlanExpired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yourplanexpired"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSuretologout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/pleaserechargetostartbilling"
            android:textColor="#526DB2"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/tvPlanExpired"
            app:layout_constraintStart_toStartOf="@+id/tvPlanExpired"
            app:layout_constraintTop_toBottomOf="@+id/tvPlanExpired" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvSuretologout"
            app:layout_constraintStart_toStartOf="@+id/tvSuretologout"
            app:layout_constraintTop_toBottomOf="@+id/tvSuretologout">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btncancelRecharge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:padding="12dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#2242EF"
                android:textSize="12sp"
                app:strokeColor="#2242EF"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGotoRecharge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/red"
                android:padding="12dp"
                android:text="Recharge"
                android:textAllCaps="false"

                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>